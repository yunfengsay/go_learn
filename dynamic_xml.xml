<?xml version="1.0" encoding="utf-8"?>
<DFrameLayout xmlns:dinamic="http://schemas.android.com/apk/res-auto"
              dinamic:dWidth="375"
              dinamic:dHeight="150"
              dinamic:dBackgroundColor="#fff"
>
    <HImageView
            dinamic:dMarginTop="12"
            dinamic:dMarginLeft="176"
            dinamic:hCornerRadius="20"
            dinamic:dWidth="40"
            dinamic:dHeight="40"
            dinamic:hScaleType="fitXY"
            dinamic:hImageUrl="$data{data.defaultIcon}"/>
    <HImageView
            dinamic:dMarginTop="12"
            dinamic:dMarginLeft="151"
            dinamic:hCornerRadius="20"
            dinamic:dWidth="40"
            dinamic:dHeight="40"
            dinamic:hScaleType="fitXY"
            dinamic:hImageUrl="$data{data.defaultIcon}"/>

    <DTextView
            dinamic:dMarginTop="60"
            dinamic:dTextAlignment="center"
            dinamic:dTextColor="#666666"
            dinamic:dText="开团后可邀请群友一起拼"
            dinamic:dTextSize="13"
            dinamic:dWidth="365"
            dinamic:dHeight="match_content"
    />
    <DLinearLayout
            dinamic:dWidth="match_content"
            dinamic:dHeight="match_content"
            dinamic:dMarginTop="90"
            dinamic:dMarginLeft="64"
            dinamic:dOrientation="horizontal">
        <HImageView
                dinamic:hCornerRadius="16"
                dinamic:dWidth="16"
                dinamic:dMarginTop="0"
                dinamic:dHeight="16"
                dinamic:hScaleType="fitXY"
                dinamic:hImageUrl="$data{data.defaultIcon}"/>
        <!-- 三段式的第一条线 -->
        <DView
                dinamic:dMarginTop="0"
                dinamic:dTextAlignment="center"
                dinamic:dBackgroundColor="$data{data.linecolor1}"
                dinamic:dTextSize="13"
                dinamic:dGravity="center"
                dinamic:dWidth="50"
                dinamic:dHeight="1"/>
        <!-- 三段式的第二条线 -->
        <DView
                dinamic:dMarginTop="0"
                dinamic:dTextAlignment="center"
                dinamic:dBackgroundColor="$data{data.linecolor2}"
                dinamic:dTextSize="13"
                dinamic:dGravity="center"
                dinamic:dWidth="50"
                dinamic:dHeight="1"/>
        <!-- 中间的头像 -->
        <HImageView
                dinamic:hCornerRadius="16"
                dinamic:dWidth="16"
                dinamic:dMarginTop="0"
                dinamic:dHeight="16"
                dinamic:hScaleType="fitXY"
                dinamic:hImageUrl="$data{data.defaultIcon}"/>
        <!-- 三段式的第三条线 -->
        <DView
                dinamic:dMarginTop="0"
                dinamic:dTextAlignment="center"
                dinamic:dBackgroundColor="$data{data.linecolor3}"
                dinamic:dTextSize="13"
                dinamic:dGravity="center"
                dinamic:dWidth="100"
                dinamic:dHeight="1"/>
        <HImageView
                dinamic:hCornerRadius="16"
                dinamic:dWidth="16"
                dinamic:dMarginTop="0"
                dinamic:dHeight="16"
                dinamic:hScaleType="fitXY"
                dinamic:hImageUrl="$data{data.defaultIcon}"/>
    </DLinearLayout>

    <DLinearLayout
            dinamic:dBackgroundColor="#fff"
            dinamic:dHeight="20"
            dinamic:dMarginTop="115"
            dinamic:dMarginLeft="35"

            dinamic:dWidth="300">
        <DTextView
                dinamic:dMarginTop="0"
                dinamic:dTextAlignment="left"
                dinamic:dTextColor="#666666"
                dinamic:dText="发起拼团"
                dinamic:dTextSize="13"
                dinamic:dWidth="100"
                dinamic:dHeight="match_content"
        >
        </DTextView>
        <DTextView
                dinamic:dMarginTop="0"
                dinamic:dTextAlignment="center"
                dinamic:dTextColor="#666666"
                dinamic:dText="邀请好友参团"
                dinamic:dTextSize="13"
                dinamic:dWidth="100"
                dinamic:dHeight="match_content"
        >
        </DTextView>
        <DTextView
                dinamic:dMarginTop="0"
                dinamic:dTextAlignment="right"
                dinamic:dTextColor="#666666"
                dinamic:dText="拼团成功"
                dinamic:dTextSize="13"
                dinamic:dWidth="100"
                dinamic:dHeight="match_content"
        >
        </DTextView>
    </DLinearLayout>

</DFrameLayout>